<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_margin="@dimen/card_radius"
    android:background="@drawable/card_dg"

    >


    <TextView
        android:id="@+id/transactionIdtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/typetextView2"
        app:layout_constraintStart_toStartOf="@+id/typetextView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/typetextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/datetextView3"
        app:layout_constraintStart_toStartOf="@+id/datetextView3"
        app:layout_constraintTop_toBottomOf="@+id/transactionIdtextView" />

    <TextView
        android:id="@+id/datetextView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/amount_textView4"
        app:layout_constraintStart_toStartOf="@+id/amount_textView4"
        app:layout_constraintTop_toBottomOf="@+id/typetextView2" />

    <TextView
        android:id="@+id/amount_textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/balance_textView5"
        app:layout_constraintStart_toStartOf="@+id/balance_textView5"
        app:layout_constraintTop_toBottomOf="@+id/datetextView3" />

    <TextView
        android:id="@+id/balance_textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/account_textView6"
        app:layout_constraintStart_toStartOf="@+id/account_textView6"
        app:layout_constraintTop_toBottomOf="@+id/amount_textView4" />

    <TextView
        android:id="@+id/account_textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="19dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/balance_textView5" />
</androidx.constraintlayout.widget.ConstraintLayout>